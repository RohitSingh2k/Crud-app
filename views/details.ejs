<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        *{
            font-family: 'Roboto', sans-serif;
        }
        div{
            border: 2px solid black;
            margin:auto;
            width :80%;
            height: auto;
            border-radius: 15px;
            padding : 15px;
        }
        img{
            height: 260px;
            width: 260px;
            margin: auto;
            border-radius: 50px;
        }
        a{
            text-decoration: none;
            color: black;
            background-color: #4E9F3D;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 4px;
            padding-bottom: 4px;
            border-radius: 5px;
            
        }
        a:hover{
            background-color: #4d8a41;
        }
        input{
            padding: 5px;
            border-radius: 5px;
            position: absolute;
            right: 25%;
            width: 20%;
        }
        label{
            position: absolute;
            left: 25%;
            width : 20%;
        }
        
        select{
            margin-left: 31%;
            border:1px solid black;
            padding: 5px;
            border-radius: 5px;
            width:20%;
        }
        button{
            background-color: rgb(255, 123, 0);
            border-radius: 5px;
            margin:20px;
            padding-right: 10px;
            padding-left: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            border:0px;
            font-size: large;
        }
        button:hover{
            background-color: rgb(201, 99, 4);
        }

        table{
            border : 1px solid black;
            border-collapse: collapse;
            margin:auto auto 50px auto;
        }

        td,th{
            border : 1px solid black;
            text-align: center;
        }

        th{
            padding : 10px 30px 10px 30px;
            background-color: #212121;
            color:white;
        }

        td{
            padding : 10px 30px 10px 30px;
            background-color: #FEF1E6;
        }
        
        form{
            display: inline-block;
        }

        button#green{
            background-color: #4E9F3D;
            font-size: large;
        }

        button#green:hover{
            background-color: #4d8a41;
        }

        form{
            display: inline-block;
        }

        td button#green.btn {
            background-color: #4E9F3D;
            padding:8px 25px 8px 25px;
            font-size: 15px; 
            margin: auto 10px auto 10px;
        }

        td button#green.btn:hover{
            background-color: #4d8a41;
        }

        td button#red.btn{
            background-color: rgb(255, 123, 0);
            padding:8px 25px 8px 25px;
            font-size: 15px; 
            margin: auto 10px auto 10px;
        }

        td button#red.btn:hover{
            background-color: rgb(201, 99, 4);
        }

        .index{
            padding : 10px 1vw 10px 1vw;
        }
    </style>
</head>
<body>
    <div>
        <center>
        <% if(user.gender === 'male') { %>
            <img src="male.jpg" alt="male_pic">
        <% } %>
        <% if(user.gender === 'female' || user.gender === 'others')  { %>
            <img src="female.jpg" alt="female_pic">
        <% } %>
        <br>
        <br>
        <label for="">name</label>
        <input type="text" value="<%= user.username %>">
        <br>
        <br>
        <label for="">email</label>
        <input type="text" value="<%= user.email %>">
        <br>
        <br>
        <label for="">phone</label>
        <input type="text" value="<%= user.phone %>">
        <br>
        <br>
        <label for="">gender</label>
        <select name="gender" id="cars">
            <option value="none"><%= user.gender %></option>
            <option value="male">male</option>
            <option value="female">female</option>
            <option value="others">others</option>
        </select>
        <br>
        <br>
        <label for="">state</label>
        <input type="text" value="<%= user.state %>">
        <br>
        <br>
        <label for="">city</label>
        <input type="text" value="<%= user.city %>">
        <br>
        <br>
        <br>
        <br>
        <form action="/add" method="get">
            <input type="email" name="email" hidden value="<%= user.email %>">
            <button id="green" >
                <i class="fa fa-plus"></i>
            </button>
        </form>
        
        <form action="/admin/dashboard" method="get">
            <button>
                <i class="fa fa-home"></i>
            </button>
        </form>
        <br>
        <br>
        <table>
            <tr>
                <th class="index">Slno</th>
                <th>Date</th>
                <th>Offer</th>
                <th>Clicks</th>
                <th>Unique Clicks</th>
                <th>Conversions</th>
                <th>EPC</th>
                <th>Unique EPC</th>
                <th>Revenue</th>
                <th>Actions</th>
            </tr>
            <% details.forEach((item,index) => { %>
                <tr>
                    <td class="index"><%= index+1 %></td>
                    <td><%= item.date %></td>
                    <td><%= item.offer %></td>
                    <td><%= item.clicks %></td>
                    <td><%= item.unique_clicks %></td>
                    <td><%= item.conversions %></td>
                    <td><%= item.epc %></td>
                    <td><%= item.unique_epc %></td>
                    <td><%= item.revenue %></td>
                    <td>
                        <form action="/editd" method="get">
                            <input type="text" hidden value="<%= item._id %>" name="id">
                            <button id="green" type="submit" class="btn">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </form>

                        <form action="/deleted" method="get">
                            <input type="text" hidden value="<%= item._id %>" name="id2">
                            <input type="text" hidden value="<%= item.email %>" name="email2">
                            <button id="red" class="btn" type="submit" onclick="return confirm('Do you want to delete this record, Please confirm !!!');">
                                <i class="fa fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>
    </center>
    </div>
</body>
</html>